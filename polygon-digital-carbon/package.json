{
  "name": "polygon-carbon",
  "version": "0.0.1",
  "repository": "https://github.com/KlimaDAO/klima-subgraphs/polygon-carbon",
  "license": "MIT",
  "scripts": {
    "set-version": "cd .. && bun version-control/inject-version.ts",
    "prepare-local": "npx mustache networkConfig/localhost.json subgraph.template.yaml > subgraph.yaml",
    "prepare-matic": "npx mustache networkConfig/matic.json subgraph.template.yaml > subgraph.yaml",
    "prepare-mumbai": "npx mustache networkConfig/mumbai.json subgraph.template.yaml > subgraph.yaml",
    "codegen": "rm -rf ./generated && graph codegen",
    "test": "graph test",
    "build": "graph build",
    "graph:create": "graph create --node $GRAPH_NODE_URL polygon-digital-carbon",
    "graph:remove": "graph remove --node $GRAPH_NODE_URL polygon-digital-carbon",
    "graph:watch": "graph deploy --watch --debug --node $GRAPH_NODE_URL --ipfs $IPFS_URL polygon-carbon",
    "graph:deploy": "graph deploy --node $GRAPH_NODE_URL --ipfs $IPFS_URL --version-label v0.0.1 polygon-digital-carbon",
    "create-args": "graph create --node $npm_config_node polygon-carbon",
    "deploy-args": "graph deploy --ipfs $npm_config_ipfs --node $npm_config_node polygon-carbon",
    "deploy-version": "graph deploy --ipfs $npm_config_ipfs --node $npm_config_node --version-label $npm_config_label polygon-carbon",
    "deploy-staging": "graph deploy --ipfs https://api.staging.thegraph.com/ipfs/ --node https://api.staging.thegraph.com/deploy/ polygon-carbon",
    "deploy-hosted": "graph deploy --product hosted-service $npm_config_path",
    "deploy-tufnel": "yarn set-version && yarn codegen && yarn build && graph deploy --studio dev-only-smart-invoice-rinkeby",
    "graph:create:local": "graph create --node http://127.0.0.1:8020 polygon-digital-carbon",
    "graph:remove:local": "graph remove --node http://127.0.0.1:8020 polygon-digital-carbon",
    "graph:deploy:local": "graph deploy --node http://127.0.0.1:8020 --ipfs http://127.0.0.1:5001 polygon-digital-carbon",
    "deploy": "yarn prepare-local && yarn codegen && yarn build && yarn graph:remove:local && yarn graph:create:local && yarn graph:deploy:local"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "0.69.1",
    "@graphprotocol/graph-ts": "0.34.0",
    "prettier": "2.7.1"
  },
  "private": true
}
